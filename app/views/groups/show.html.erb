<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group detail</h2>
  		<table class='table'>
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    グループ名
                </th>
                <th>
                    紹介文
                </th>
                <th>
                メンバー
                </th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
  		  <tr>
          <td>
            <%= link_to group_path(@group) do %>
                <%= image_tag @group.get_image(80,80) %><br>
            <% end %>
          </td>
          <td><%= @group.name  %></td>
          <td><%= @group.introduction %></td>
          <td>
            <% @group.group_users.each do |group_user| %>
              <%= group_user.user.name %><br>
            <% end %>
          </td>
          <% if @group.owner_id == current_user.id %>
          <td><%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %></td>
          <td><%= link_to "Notice an Event", new_event_path(group_id: @group.id), class: "btn btn-info" %></td>
          <% elsif @group.group_users.where(user_id: current_user.id).exists? %>
          <td><%= link_to "Leave this group", group_user_path(group_id: @group.id, user_id: current_user.id), method: :delete, data: {comfirm: "本当にグループを抜けますか？"}, class: "btn btn-danger" %></td>
          <% else %>
          <td><%= link_to "Join this group", group_users_path(group_id: @group.id), method: :post, class: "btn btn-success" %></td>
          <% end %>
          
          
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
